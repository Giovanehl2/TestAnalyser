<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>

<script>
    window.load = AutoSaveQuestao();
    function AutoSaveQuestao() {
        var arrME = new Array();
        var arrVF = new Array();
        $("#AlternativaId input[name^='AlternativaIdSE']").focusout(function () {

            var AltID = this.value;
            var QustID = $(this).closest(".form-row").find("#QuestaoIdSE").val();
            var ProvID = "@provaID";

            //console.log(AltID + " " + QustID + " " + ProvID);

            $.ajax({
                type: "POST",
                url:'/ConsultarProvaAl/SalvarQuestaoSE',
                data: { QuestaoID: QustID, ProvaID: ProvID, AlternativaID: AltID },
                success: function (data) {
                }, beforeSend: function () {
                    //$("#qust #OKSE").hide();
                    //$("#qust #salvandoSE").show();
                }, complete: function () {
                    //$("#qust #OKSE").show();
                    //$("#qust #salvandoSE").hide();
                }
            });
        });

        $("#AlternativaIdME input[name^='AlternativaIdME']").focusout(function () {

            $(this).each(function () {
                var ID = $(this).val();
                var index = arrME.findIndex(i => i == ID);

                if (index == -1) {
                    arrME.push(parseInt(ID));
                } else {
                    arrME.splice(index, 1);
                }
            });

            var QustID = $(this).closest(".form-row").find("#QuestaoIdME").val();
            var ProvID = "@provaID";

            //console.log(arrME + " " + QustID + " " + ProvID);

            $.ajax({
                type: "POST",
                url:'/ConsultarProvaAl/SalvarQuestaoMEVF',
                data: { QuestaoID: QustID, ProvaID: ProvID, AlternativaID: arrME },
                success: function (data) {
                }, beforeSend: function () {
                    //$("#qust #OKSE").hide();
                    //$("#qust #salvandoSE").show();
                }, complete: function () {
                    //$("#qust #OKSE").show();
                    //$("#qust #salvandoSE").hide();
                }
            });
        });

        $("#AlternativaIdVF input[name^='AlternativaIdVF']").focusout(function () {

            $(this).each(function () {
                var ID = $(this).val();
                var index = arrVF.findIndex(i => i == ID);

                if (index == -1) {
                    arrVF.push(parseInt(ID));
                } else {
                    arrVF.splice(index, 1);
                }
            });

            var QustID = $(this).closest(".form-row").find("#QuestaoIdVF").val();
            var ProvID = "@provaID";

            //console.log(arrVF + " " + QustID + " " + ProvID);

            $.ajax({
                type: "POST",
