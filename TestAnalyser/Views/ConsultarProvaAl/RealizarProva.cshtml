                }, beforeSend: function () {
                    //$("#qust #OKSE").hide();
                    //$("#qust #salvandoSE").show();
                }, complete: function () {
                    //$("#qust #OKSE").show();
                    //$("#qust #salvandoSE").hide();
                }
            });
        });

        $("#DivRespostaDT textarea[name^='Resposta']").focusout(function () {

            var Resp = this.value;
            var QustID = $(this).closest("#DivRespostaDT").find("#QuestaoIdDS").val();
            var ProvID = "@provaID";

            //console.log(Resp + " " + QustID + " " + ProvID);

            $.ajax({
                type: "POST",
                url:'/ConsultarProvaAl/SalvarQuestaoDS',
                data: { QuestaoID: QustID, ProvaID: ProvID, Resposta: Resp },
                success: function (data) {
                }, beforeSend: function () {
                    //$("#qust #OKDS").hide();
                    //$("#qust #salvandoDS").show();
                }, complete: function () {
                    //$("#qust #OKDS").show();
                    //$("#qust #salvandoDS").hide();
                }
            });
        });
    }

    function FinalizarProva() {
        var ProvID = "@provaID";
        var arrIDs = new Array();

        var r = confirm("Confirma que respondeu todas as questões e deseja Finalizar?");
        if (r == true) {

            $("#divGeral input[name^='AlternativaId']").each(function () {

                if (this.checked == true) {
                    var ID = $(this).val();
                    if (ID != "false") {
                        arrIDs.push(parseInt(ID));
                    }
                }
            });

            $.ajax({
                type: "POST",
                url: "/ConsultarProvaAl/SalvarTodasAlternativas",
                data: { ProvaID: ProvID, AlternativasID: arrIDs },
                success: function (data) {
                }
            });
            window.location.href = "/ConsultarProvaAl/FinalizarProva";
        }
    }

</script>
