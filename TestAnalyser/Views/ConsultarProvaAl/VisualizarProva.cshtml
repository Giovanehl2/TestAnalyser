<script>
    window.load = MarcarCorretas();

    function MarcarCorretas() {

        $("#DivAlternativas #QstCorreta").each(function () {
            var certo = $(this).val();
            if (certo == 1) {
                $(this).closest(".form-row").css("background-color", "#50FF50");
            }
        });
        AlternativasSelecionadas()
    }

    function AlternativasSelecionadas() {
        var Marcs = @Html.Raw(Json.Encode(ViewBag.Marcadas));
        var contador = 0;

        $("#DivGeral input[name^='AlternativaId']").each(function () {
            var ID = $(this).val();

            if (ID == Marcs[contador]) {
                $(this).attr("checked", true);
                contador++;
            }
        });
    }

    function VoltarPagina() {

        $.ajax({
            type: "GET",
            url: "/ConsultarProvaAl/Voltar",
            success: function (data) {
                window.location.href = "/ConsultarProvaAl/ConsultarProvaAl";
            }
        });
        location.reload();
    }

    function SolicitarRevisao() {
        var ProvID = parseInt("@provaID");
        var r = confirm("Deseja solicitar ao professor a revisão dessa prova?");
        if (r == true) {

            $.ajax({
                type: "POST",
                url: "/ConsultarProvaAl/SolicitarRevisao",
                data: { ProvaID: ProvID },
                success: function (data) {
                }
            });
        }
        window.location.href = "/ConsultarProvaAl/ConsultarProvaAl";
    }

</script>

