@model TestAnalyser.Model.Usuario
@using TestAnalyser.Model;
@using System.Web.Mvc;

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Login.cshtml";
    Session["usu_id"] = 0;
}

<style>
    input {
        max-width: none;
    }

    legend {
        width: auto;
        font-size: 30px;
        color: #0350bb;
    }

    fieldset {
        border: 1px solid #c0c0c0;
        padding: 0.35em 0.625em 0.75em;
    }
</style>

<br />
<br />

<div class="container">
    <div style="text-align: center;">
        <img src="~/Content/logo.png" alt="Sample Photo" />
    </div>
    <br />
    <div class="row">
        <div class="col-md-4 offset-4">
            <form class="form-horizontal" id="formLogin" method="post" action="@Url.Action("Login", "Login")">
                <fieldset>
                    <legend>
                        Login
                    </legend>

                    <div class="form-group">
                        <label for="inputUsuario" class="col-lg-2 control-label">Usuário</label>
                        <div class="col-lg-10">
                            @Html.EditorFor(model => model.Login, new { htmlAttributes = new { @class = "form-control", required = "required", @type = "number" } })
                            <label id="labelinputUsuario" name="labelinputUsuario" class="text-danger" style="display:none;">Digite seu usuário</label>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="inputPassword" class="col-lg-2 control-label">Senha</label>
                        <div class="col-lg-10">
                            @Html.EditorFor(model => model.Senha, new { htmlAttributes = new { @class = "form-control", placeholder = "Password", @type = "password" } })
                            <label type="password" id="labelinputPassword" name="labelinputPassword" class="text-danger" style="display:none;">Digite sua senha</label>
                        </div>
                    </div>
                    <div class="col-lg-8">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-12 row">
                        <div class="col-md-8">
                            <input id="btnFirstLogin" onclick="PrimeiroLogin()" value="Primeiro Login" class="btn btn-default" />
                        </div>
                        <div class="col-md-4" style="text-align: right;">
                            <input id="btnLogin" type="submit" value="Login" class="btn btn-primary" />
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>

</div>

<script>

    function PrimeiroLogin() {
        window.location.href = "/Login/ConfirmarLogin";
    }

