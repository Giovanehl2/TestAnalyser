@model TestAnalyser.Model.Configuracao
@using TestAnalyser.Model;
@using System.Web.Mvc;

@{
    ViewBag.Title = "Configuracoes";
}

<h2>Configurar API WebService</h2>
<div class="col-lg-12 tab-content">
    <br />
    <div>
        <form class="form-horizontal" id="formConfiguracoes" method="post" action="@Url.Action("SalvarConfiguracoes", "Configuracoes")">
            <div class="form-row">
                <div class="col-md-10">
                    <label for="Instituicao">Instituição:</label>
                    <div class="row">
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Instituicao, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                    <br />
                    <label for="Cnpj">CNPJ:</label>
                    <div class="row">
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Cnpj, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                </div>
            </div>
            <br />
            <br />
            <div class="form-row">
                <div class="col-md-10">
                    <label for="UrlApi">URL - WebService</label>
                    <div class="row">
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.UrlApi, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                </div>
            </div>
            <br />
            <br />
            <div class="form-row">
                <div class="col-md-6">
                    <div class="row">
                        <div class="col-md-6">
                            <label for="sincAuto">Sincronização Automatica (Data)</label>
                            <input id="sincAuto" class="form-control" name="sincAuto" type="date" value="" />
                        </div>
                        <div class="col-md-6">
                            <label for="HoraCorrecao">Horário de correção</label>
                            <input id="HoraCorrecao" class="form-control" name="HoraCorrecao" type="time" value="" />
                        </div>
                    </div>
                </div>
            </div>
            <br />
            <br />
            <div class="form-row">
                <div class="col-md-8">
                    <label for="ServidorEmail">Servidor de Email:</label>
                    <div class="row">
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.ServidorEmail, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                    <br />
                    <label for="CaixaSaida">Caixa de Saida:</label>
                    <div class="row">
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.CaixaSaida, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                    <br />
                    <label for="Senha">Senha:</label>
                    <div class="row">
                        <div class="col-md-6">
                            @Html.EditorFor(model => model.Senha, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                </div>
            </div>
            <br />
            <div class="col-md-2">
                <button witdh="50" id="btnSalvar" type="submit" class="btn btn-primary btn-sm">Salvar</button>
            </div>
        </form>
        <br />
    </div>
</div>


<div class="modal fade" id="SincOK">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title">Sucesso</h4>
            </div>
            <div class="modal-body">
                <p>Os dados foram sincronizados com sucesso!</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">OK</button>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">

    function SincNow() {
        var url = document.getElementById('UrlApi').value;
        console.log(url);
        $('#SincOK').modal('show');
    }

</script>