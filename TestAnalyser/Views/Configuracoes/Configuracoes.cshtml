@model TestAnalyser.Model.Configuracao
@using TestAnalyser.Model;
@using System.Web.Mvc;

@{
    ViewBag.Title = "Configuracoes";
}

<h2>Configurar API WebService</h2>
<div class="col-lg-12 tab-content">
    <br />
    <div>
        <form class="form-horizontal" id="formConfiguracoes" method="post" action="@Url.Action("SalvarConfiguracoes", "Configuracoes")">
            <div class="form-row">
                <div class="col-md-10">
                    <label for="Instituicao">Instituição:</label>
                    <div class="row">
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Instituicao, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                    <br />
                    <label for="Cnpj">CNPJ:</label>
                    <div class="row">
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Cnpj, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                </div>
            </div>
            <br />
            <br />
            <div class="form-row">
                <div class="col-md-10">
                    <label for="UrlApi">URL - WebService</label>
                    <div class="row">
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.UrlApi, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                </div>
            </div>
            <br />
            <br />
            <div class="form-row">
                <div class="col-md-6">
                    <div class="row">
                        <div class="col-md-6">
                            <label for="sincAuto" title="Digite um dia para a sincronização automática dos dados!">Sincronização Automatica (Data)</label>
                            <input id="sincAuto" title="Digite um dia para a sincronização automática dos dados!" class="form-control" name="sincAuto" type="number" value=@Model.sincAuto placeholder="1 á 20" />
                        </div>
                        <div class="col-md-6">
                            <label for="HoraCorrecao" title="Selecione o horário que será realizado a sincronização automática!">Horário de correção</label>
                            <input id="HoraCorrecao" title="Selecione o horário que será realizado a sincronização automática!" class="form-control" name="HoraCorrecao" type="time" value=@Model.HoraCorrecao />
                        </div>
                    </div>
                </div>
            </div>
            <br />
            <br />
            <div class="form-row">
                <div class="col-md-8">
                    <label for="ServidorEmail">Servidor de Email:</label>
                    <div class="row">
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.ServidorEmail, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                    <br />
                    <label for="CaixaSaida">Caixa de Saida:</label>
                    <div class="row">
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.CaixaSaida, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                    <br />
                    <label for="Senha">Senha:</label>
                    <div class="row">
                        <div class="col-md-6">
                            @Html.EditorFor(model => model.Senha, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                </div>
            </div>
            <br />
            <div class="col-md-2">
                <button witdh="50" id="btnSalvar" type="submit" class="btn btn-primary btn-sm">Salvar</button>
            </div>
        </form>
        <br /><br />
        <button witdh="50" id="btnImportar" type="submit" onclick="ImportarDados()" class="btn btn-primary btn-sm">Importar agora</button>
        <br />
    </div>
</div>


<div class="modal fade" id="SincOK">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title">Sucesso</h4>
            </div>
            <div class="modal-body">
                <p>Os dados foram sincronizados com sucesso!</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">OK</button>
            </div>
        </div>
    </div>
</div>
@Scripts.Render("~/bundles/jquery")
<script type="text/javascript">

    function SincNow() {
        var url = document.getElementById('UrlApi').value;
        console.log(url);
        $('#SincOK').modal('show');
    }

    function ImportarDados() {

        $.ajax({
            type: "GET",
            url: "/Configuracoes/ImportarDadosApi",
            success: function (data) {
                alert(data);
            }
        });
        location.reload();
    }
</script>