                <div class="col-md-4">
                    <label for="HorarioCorrecao">Horário de correção</label>
                    <div class="row">
                        <div class="col-md-6">
                            <input type="time" class="form-control" id="HorarioCorrecao">
                        </div>
                        <div class="col-md-2">
                            <button witdh="50" class="btn btn-default btn-sm">Salvar</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
        <br />
    </div>
</div>

@* modal de OK *@
