<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">

@{
    ViewBag.Title = "GerarProva";
}

<script src="//code.jquery.com/jquery-1.11.2.min.js"></script>
<script src="//netdna.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
<script src="js/multiselect.js"></script>

<h2>Gerar Prova</h2>
<br />
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <form>
                <div class="form-row">
                    <div class="form-group col-md-6">

                        <label for="TituloProva">Titulo da prova</label>
                        <input class="form-control" id="TituloProva" type="text">

                    </div>

                    <div class="form-group col-md-6">

                        <div class="row">
                            <div class="col-md-4"><label for="DataProva">Data da Prova</label></div>
                            <div class="col-md-4"><label for="DataProva">Hora - Inicio</label></div>
                            <div class="col-md-4"><label for="DataProva">Hora - Final</label></div>
                        </div>

                        <div class="row">
                            <div class="col-md-4"><input class="form-control" id="DataProva" type="date"></div>
                            <div class="col-md-4"><input class="form-control" id="HoraProvaInicio" type="time"></div>
                            <div class="col-md-4"><input class="form-control" id="HoraProvaFinal" type="time"></div>
                        </div>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col">
                        <label for="NotaMax">Nota máxima</label>
                        <input class="form-control " id="NotaMax" type="number">
                    </div>

                    <div class="form-group col">
                        <label for="DisciplinaProva">Disciplina</label>
                        <select class="form-control" id="Disciplinas" name="Disciplinas" size="1">
                            <option>Selecione</option>
                            <option>Disciplina1</option>
                            <option>Disciplina2</option>
                        </select>
                    </div>

                    <div class="form-group col">
                        <label for="TurmaProva">Turma</label>
                        <select class="form-control" id="Turmas" name="Turmas" size="1">
                            <option>Selecione</option>
                            <option>Turma1</option>
                            <option>Turma2</option>
                        </select>

                    </div>
                    <div class="form-group col">
                        @*<label for="AssuntoProva">Assunto</label>
                          <select class="form-control" id="Assuntos" name="Assuntos" size="1">
                              <option>Selecione</option>
                              <option>Assunto1</option>
                              <option>Assunto2</option>
                          </select>*@
                    </div>
                </div>
                <br />
                <br />
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <div class="row">
                            <div class="col-md-1"></div>
                            <label class="form-check-label" for="gridCheck">
                                Assunto da Prova
                            </label>
                        </div>
                        <br>
                        <div class="row">
                            <div class="col-md-5">

                                <select name="from" id="multiselect" class="form-control" size="8" multiple="multiple">
                                    <option value="1">C#</option>
                                    <option value="2">Orientação a Objetos</option>
                                    <option value="3">SQL Server</option>
                                    <option value="4">Banco de Dados Geral</option>
                                    <option value="5">JavaScript</option>
                                    <option value="6">Gerenciamento de TI</option>
                                    @*<option value="7">Lua</option>
                                    <option value="8">MATLAB</option>
                                    <option value="9">NewLISP</option>
                                    <option value="10">PHP</option>
                                    <option value="11">Perl</option>
                                    <option value="12">SQL</option>
                                    <option value="13">Unix shell</option>*@
                                </select>
                            </div>
                            <div class="col-md-2">
                                <button type="button" id="multiselect_rightAll" class="btn btn-block"><i class="glyphicon glyphicon-forward"></i></button>
                                <button type="button" id="multiselect_rightSelected" class="btn btn-block"><i class="glyphicon glyphicon-chevron-right"></i></button>
                                <button type="button" id="multiselect_leftSelected" class="btn btn-block"><i class="glyphicon glyphicon-chevron-left"></i></button>
                                <button type="button" id="multiselect_leftAll" class="btn btn-block"><i class="glyphicon glyphicon-backward"></i></button>
                            </div>
                            <div class="col-md-5">
                                <select name="to" id="multiselect_to" class="form-control" size="8" multiple="multiple"></select>
                            </div>
                        </div>
                    </div>


                    <div class="form-group col-md-6">

                        <div class="row">
                            <div class="col">
                                <div class="col">
                                    <div class="row">
                                        <div class="col">
                                            <label class="form-check-label" for="gridCheck">
                                                Tipo das Questões
                                            </label>
                                        </div>
                                    </div>
                                    <br />
                                    <div class="row">
                                        <div class="col-md-1">
                                            <input class="form-check-input" type="checkbox" id="gridCheck">
                                        </div>
                                        <div class="col">
                                            <div class="form-check">
                                                <label class="form-check-label" for="gridCheck">Simples escolha</label>
                                            </div>
                                        </div>
                                        <div class="col">
                                            <input class="form-control" id="AssuntoProva" type="number">
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-1">
                                            <input class="form-check-input" type="checkbox" id="gridCheck">
                                        </div>
                                        <div class="col">
                                            <div class="form-check">
                                                <label class="form-check-label" for="gridCheck">
                                                    Multipla escolha
                                                </label>
                                            </div>
                                        </div>
                                        <div class="col">
                                            <input class="form-control" id="AssuntoProva" type="number">
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-1">
                                            <input class="form-check-input" type="checkbox" id="gridCheck">
                                        </div>
                                        <div class="col">
                                            <div class="form-check">
                                                <label class="form-check-label" for="gridCheck">
                                                    Verdadeira ou falso
                                                </label>
                                            </div>
                                        </div>
                                        <div class="col">
                                            <input class="form-control" id="AssuntoProva" type="number">
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-1">
                                            <input class="form-check-input" type="checkbox" id="gridCheck">
                                        </div>
                                        <div class="col">
                                            <div class="form-check">

                                                <label class="form-check-label" for="gridCheck">
                                                    Dissertativa
                                                </label>
                                            </div>
                                        </div>
                                        <div class="col">
                                            <input class="form-control" id="AssuntoProva" type="number">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <br />
                    </div>
                </div>
                <br />
                <br />
                <div class="form-row">
                    <div class="form-group col-md-10 offset-md-1">
                        <div class="row">
                            <div class="col-md-6 offset-md-4">
                                <label class="form-check-label" for="gridCheck">
                                    Configuração da faixa de correto/incorreto:
                                </label>
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="form-group col-md-4">
                                <label for="Incorreto">Incorreto</label>

                                <div class="row">
                                    <div class="col-md-5">
                                        <input class="form-control" id="Incorreto1" type="text" value="0">
                                    </div>
                                    à
                                    <div class="col-md-5">
                                        <input class="form-control" id="Incorreto2" type="text" value="35">
                                    </div>
                                </div>
                            </div>

                            <div class="form-group col-md-4">
                                <label for="Revisar">Revisar</label>

                                <div class="row">
                                    <div class="col-md-5">
                                        <input class="form-control" id="Revisar1" type="text" value="36">
                                    </div>
                                    à
                                    <div class="col-md-5">
                                        <input class="form-control" id="Revisar2" type="text" value="70">
                                    </div>
                                </div>
                            </div>

                            <div class="form-group col-md-4">
                                <label for="Correto">Correto</label>

                                <div class="row">
                                    <div class="col-md-5">
                                        <input class="form-control" id="Correto1" type="text" value="71">
                                    </div>
                                    à
                                    <div class="col-md-5">
                                        <input class="form-control" id="Correto2" type="text" value="100">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
            <button class="btn btn-primary" witdh="50" title="Criar" onclick="AdicionarQuestoesNaProva()">Criar</button>
        </div>
    </div>

</div>
<script>
    $('#multiselect').multiselect();

    function AdicionarQuestoesNaProva() {
        location.href = "http://localhost:54994/GerarProva/AdicionarQuestoesNaProva";
    }

</script>

